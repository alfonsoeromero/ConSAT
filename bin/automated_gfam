#!/usr/bin/env python
"""GFam automated script"""

import sys

try:
    from gfam.scripts.automated import AutomatedGFam
except ImportError:
    # Insert the parent directory of the master script into the Python path
    # and try again
    from os.path import dirname, join
    sys.path.insert(0, join(dirname(sys.modules[__name__].__file__), ".."))
    from gfam.scripts.automated import AutomatedGFam

if __name__ == "__main__":
    sys.exit(AutomatedGFam().run())
